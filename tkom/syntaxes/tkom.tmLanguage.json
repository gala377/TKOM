{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "tkom language",
    "scopeName": "source.tkom",
    "fileTypes": ["tkom", "conc"],
    "variables": {
        "identifier":  "[A-Za-z_]([a-zA-Z0-9]|_)*"
    },
    "patterns": [
        {
            "match": "(?<=^)(fn)(?=\\s)",
            "name": "function.keyword.tkom"
        },
        {
            "match": "(\\s*|^)(let)(?=\\s)",
            "name": "variable.declaration.keyword.tkom"
        },
        {
            "match": "\\s*//.*",
            "name": "comment.line.tkom"
        },
        {
            "match": "(?<=fn\\s)([A-z][A-z0-9]*)(.*?)\\s*\\{",
            "name": "function.identifier.tkom"
        },
        {
            "match": "[A-Za-z_]([a-zA-Z0-9]|_)*",
            "name": "identifier.tkom"
        },
        {
            "match": "{{identifier}}",
            "name": "identifier.test.tkom"
        }
    ]    
}